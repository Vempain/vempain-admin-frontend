{
  "name": "@vempain/vempain-admin-frontend",
  "version": "0.9.0",
  "description": "Vempain Admin frontend",
  "author": "Paul-Erik Törrönen",
  "homepage": "https://vempain.poltsi.fi",
  "license": "GPL-2.0",
  "packageManager": "yarn@4.9.2",
  "scripts": {
    "prebuild": "node generateBuildInfo.js",
    "prestart": "node generateBuildInfo.js",
    "start": "env-cmd -f .env.local vite",
    "build": "yarn prebuild && tsc && env-cmd -f .env.prod vite build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage .",
    "test:debug": "jest --inspect-brk --runInBand --no-cache",
    "preview": "vite preview",
    "build:production": "yarn prebuild && env-cmd -f .env.prod vite build"
  },
  "dependencies": {
    "@ant-design/icons": "^6.0.0",
    "@ant-design/v5-patch-for-react-19": "^1.0.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/dompurify": "^3.2.0",
    "@types/node": "^22.13.5",
    "@types/react-highlight-words": "^0.20.0",
    "@vempain/vempain-auth-frontend": "^0.9.3",
    "@vitejs/plugin-react": "^5.0.0",
    "antd": "^5.27.0",
    "axios": "^1.7.9",
    "dayjs": "^1.11.13",
    "dompurify": "^3.2.4",
    "env-cmd": "^10.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-highlight-words": "^0.21.0",
    "react-router-dom": "^7.2.0",
    "web-vitals": "^5.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react-swc": "^4.0.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "ts-jest": "^29.1.2",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.0.4",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "testEnvironment": "jest-environment-jsdom",
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "modulePaths": [
      "<rootDir>/src"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Vempain/vempain-auth-frontend.git"
  }
}
